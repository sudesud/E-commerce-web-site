@model Bitik.Models.LoginViewModel
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap</title>
    <link rel="stylesheet" href="~/css/Login.css">

</head>
<body>
    <div class="login-container">
        <h1>Giriş Yap</h1>
        <div class="validation-errors">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>
        <form class="user" method="post" asp-action="Index" asp-controller="Login">
            <div class="form-group">
                <label for="UserName">Kullanıcı Adı</label>
                <input type="text" id="UserName" asp-for="UserName" placeholder="Kullanıcı adınızı giriniz" required>
            </div>
            <div class="form-group">
                <label for="Password">Şifre</label>
                <input type="password" id="Password" asp-for="Password" placeholder="Şifrenizi giriniz" required>
            </div>
            <button type="submit" class="login-button">Giriş Yap</button>
        </form>
        <div class="register-link">
            <p>Hesabınız yok mu? <a href="@Url.Action("Index", "Register")">Kayıt Ol</a></p>
        </div>
    </div>
</body>
</html>
