@model Bitik.Dto.AppUserEditDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<link rel="stylesheet" href="~/css/MyAccount.css" />

<h1>Hesabım</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Index" asp-controller="MyAccount">
            <div class="form-group">
                <input asp-for="FirstName" placeholder=" Adını Girin" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="LastName" placeholder=" Soyadını Girin" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="Email" placeholder="Email Adresiniz Girin" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="City" placeholder="Şehir Adresiniz Girin" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password"  placeholder="Şifrenizi Girin" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" type="password" placeholder="Şifrenizi Tekrar Girin" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Düzelt"  class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>